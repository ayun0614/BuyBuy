<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ezen.buybuy.mapper.ProductMapper">

<insert id="ProductListInsert" parameterType="com.ezen.buybuy.entity.Products">
		insert into Products(product_Name, original_Price, discount_Price, discount_Rate, thumbnail_Img, end_Date) 
		values(#{product_Name}, #{original_Price},#{discount_Price}, #{discount_Rate}, #{thumbnail_Img}, #{end_Date})
	</insert>
	
	<select id="ProductList" resultType="com.ezen.buybuy.entity.Products">
		select *from Products 
	</select>
	
	<select id="read" resultType="com.ezen.buybuy.entity.Products">
 		select *from Products where product_IDX=#{product_IDX}
 	</select>
</mapper>

